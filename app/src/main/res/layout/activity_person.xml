<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="demo.you.com.developerdemo.PersonActivity">
    <LinearLayout
        android:id="@+id/top_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:padding="12dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/title"
            android:textColor="@color/black_content"
            android:textSize="17sp"
            android:text="如何利用RecyclerView打造炫酷滑动卡片"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tab_dujiahao"
                android:text="独家号"
                android:textSize="12sp"
                android:textColor="@color/main_theme"
                android:background="@drawable/tab_dujiahao"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/name_dujiahao"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/tab_dujiahao"
                android:textColor="@color/main_theme"
                android:text="半栈工程师"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tab_author"
                android:layout_marginLeft="8dp"
                android:text="作者"
                android:textSize="12sp"
                android:background="@drawable/tab_author"
                android:layout_toRightOf="@id/name_dujiahao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/name_author"
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"
                android:text="半栈工程师"
                android:textSize="12sp"
                android:layout_toRightOf="@id/tab_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/read_num"
                android:text="234"
                android:textSize="12sp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/lab_read"
                android:text="阅读"
                android:textSize="12sp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/read_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
    <View
        android:id="@+id/top_line"
        android:layout_below="@id/top_layout"
        android:background="@color/part_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <WebView
        android:id="@+id/web_view"
        android:layout_below="@id/top_line"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:id="@+id/bottom_layout"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/web_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </LinearLayout>
</RelativeLayout>
